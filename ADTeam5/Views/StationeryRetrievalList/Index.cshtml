<div class="container">
    <div class="form-group">
        <div class="row">
            <div class="col-12">
                @using (Html.BeginForm("Index", "StationeryRetrievalList", FormMethod.Post))
                {
                    <table id="StationeryRetrievalList" class="table table-striped table-bordered" style="width: 100%;">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ItemNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ItemName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.QuantityRetrieved)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="td1">
                                        @Html.DisplayFor(modelItem => item.ItemNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.QuantityRetrieved)
                                    </td>
                                    <td>
                                        <a asp-action="Voucher" asp-route-id="@item.ItemNumber">Add to Voucher</a>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary" id="Edit" data-toggle="modal" data-target="#exampleModalCenter">
                                            Edit
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <input type="submit" value="Finish" class="btn btn-primary" />
                }
            </div>
        </div>
    </div>
</div>



