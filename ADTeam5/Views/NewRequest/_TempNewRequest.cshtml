                return $(this).val();
            }).get();
            alert(itemToAdd.join(','));
            $.ajax({
                type: "POST",
                url: '@Url.Action("Index", "NewRequest")',
                dataType: "html",
                data: { itemSubmitted: itemToAdd },
                success:
                    function (data) {
                        //$('#result').html(data);
                        alert("submitted");
                        data = JSON.parse(data);
                        window.location.href = data.redirecturl;
                    }
            })
        });
    });
</script>

