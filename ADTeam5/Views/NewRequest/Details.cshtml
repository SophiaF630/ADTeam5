@model IEnumerable<ADTeam5.ViewModels.ViewRequestDetails>

@{
    ViewData["Title"] = "Submitted Request";
}

@if (TempData["Submitted"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert" aira-label="close">
            <span aria-hidden="true">&times</span>
        </button>
        @TempData["Submitted"]
    </div>
}

@*<h4>Submitted Request</h4>*@
    <div class="box">
        <div class="box-header with-border">
            <div align="center" vertical-align="middle">
                <div style="width: 350px;padding: 20px;margin: 20px;border-style:outset; border-width:1px; ">
                    <div align="center" vertical-align="middle">
                        <h3 class="box-title">
                            <strong><font size="5">Submitted Request Profile</font></strong>
                        </h3>
                    </div>
                    <div class="box-tools">
                    </div>
                </div>
            </div>
        </div>
        <br />

        <p><b>&nbsp;&nbsp;&nbsp; Request No: @ViewData["RRID"]</b></p>
        <hr />

        <div class="box-body no-padding">
            <div class="table-responsive table-full-width">
                <table class="table no-margin table-hover table-striped table-responsive table-borderless" style="width: 100%;">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>
                                Item Number
                            </th>

                            <th>
                                Item Quantity
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td></td>
                                <td width="20%">
                                    @Html.DisplayFor(modelItem => item.itemName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.quantity)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <br />
        <br />
        <br />
        <hr />


        <div>
            <a asp-action="Index">
                <button type="button" class="btn btn-primary" style="width:160px;height:32px;border:2px;margin-left:416px; background-color:#00B894">
                    <i class='fas fa-plus-circle' style='font-size:14px'></i>&nbsp;&nbsp;Add a New Request
                </button>
            </a>
            <br />
            <br />
        </div>

