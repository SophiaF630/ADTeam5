@model ADTeam5.Controllers.Department.TemporaryRecordDetails

@{
    ViewData["Title"] = "NewRequest";
}

<h1>New Request</h1>

<div class="row">
    <div class="col-md-4">
        @{
            <form asp-controller="NewRequest" method="post" class="form-horizontal" role="form">

                <div class="form-group">
                    <label>Item Name</label>
                    <select asp-for="ItemNumber" class="form-control" asp-items="@(new SelectList(ViewBag.ListofCatalogueName, "ItemNumber", "ItemName"))"></select>
                </div>

                <div class="form-group">
                    <label> Quantity</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Add Item" class="btn btn-primary" />
                </div>

            </form>

        }
    </div>
</div>


@if (ViewBag.ItemNumberList != null && ViewBag.QuantityList != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Item Number
                </th>
                <th>
                    Quantity
                </th>

                <th></th>
            </tr>
        </thead>

        <tbody>
            <pre>
            <tr>

            <td>
                    @foreach (var item in ViewBag.ItemNumberList)
                    {
            <ul>@item</ul>
                    }
                </td>

            <td>
                    @foreach (var item in ViewBag.QuantityList)
                    {
            <ul>@item</ul>
                    }
                </td>
            </tr>
           </pre>
        </tbody>
    </table>
}
<form asp-action="Submit" method="post">
    <div class="form-group">
        <input type="submit" value="Submit" />
    </div>
</form>



