<!-- Main content -->
<section class="content">
    <!-- SELECT2 EXAMPLE -->
    <div class="box box-default">
        <div class="box-header with-border">
            <div align="center" vertical-align="middle">
                <div style="width: 550px;padding: 20px;margin: 20px;border-style:outset; border-width:1px; ">
                    <div align="center" vertical-align="middle">
                        <h3 class="box-title">
                            @if (ViewBag.IfCanDelete == "Y")
                            {
                                <strong><font size="5">Are you sure you want to delete this?</font></strong>
                            }
                            else
                            {
                                <strong><font size="5">You are not able to delete this item</font></strong>
                            }
                        </h3>
                    </div>
                    <div class="box-tools">
                    </div>
                </div>
            </div>
        </div>

        <div class="content">
            <dl class="row" style="margin-left:130px">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category)
                </dd>
