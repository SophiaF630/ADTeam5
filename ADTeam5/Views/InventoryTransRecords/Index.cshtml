@model IEnumerable<ADTeam5.ViewModels.InventoryTransRecordDetails>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["NoDetails"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aira-label="close">
            <span aria-hidden="true">&times</span>
        </button>
        @TempData["NoDetails"]
    </div>
}

@if (TempData["EndDateError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aira-label="close">
            <span aria-hidden="true">&times</span>
        </button>
        @TempData["EndDateError"]
    </div>
}
@if (TempData["StartDateError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aira-label="close">
            <span aria-hidden="true">&times</span>
        </button>
        @TempData["StartDateError"]
    </div>
}
@if (TempData["StartAndEndDateError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aira-label="close">
            <span aria-hidden="true">&times</span>
        </button>
        @TempData["StartAndEndDateError"]
    </div>
}
@if (TempData["FilterError"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aira-label="close">
            <span aria-hidden="true">&times</span>
        </button>
        @TempData["FilterError"]
    </div>
}

@*<h1>Index</h1>*@

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <div align="center" vertical-align="middle">
                        <div style="width: 300px;padding: 20px;margin: 20px;border-style:outset; border-width:1px; ">
                            <div align="center" vertical-align="middle">
                                <h2 class="box-title">
                                    <strong><font size="5">Inventory Transactions</font></strong>
                                </h2>
                            </div>
                            <div class="box-tools">
                            </div>
                        </div>
                    </div>
                    <form asp-action="Index" method="post">
                        <div>
                            Select start date:
                            <input type="date" name="startdate" id="start" value="=" />
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            Select end date:
                            <input type="date" name="enddate" id="end" value=" = " />

                            <input type="submit" value="Search" class="btn btn-primary" id="searchbtn" style="background-color:#00B894;border:none;width:80px;height:30px" />
                        </div>
                        <br />
                        <hr />
                        @if (ViewData["StartDate"] != null & ViewData["EndDate"] != null)
                        {
                            <p> <b>Search results from @ViewData["StartDate"] to @ViewData["EndDate"]</b></p>
                        }
                    </form>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    Department/Supplier
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ItemName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Qty)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Balance)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DepartmentOrSupplier)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Qty)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Balance)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
