@model IEnumerable<ADTeam5.ViewModels.PurchaseOrderRecordDetails>

@{
    ViewData["Title"] = "Details";
}

<h1>Purchase Order Details -- same as AdjustmentRecordDetails</h1>


<div class="container">
    <div class="row">
        <div class="col-12">
            <table id="AdjustmentDetails" class="table table-striped table-bordered" style="width: 100%;">
                <thead>
                    <tr>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.ItemNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ItemName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SupplierCode)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierCode)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ItemNumber">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.ItemNumber">Delete</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<input type="submit" value="Save as Draft" class="btn btn-primary" />
<input type="submit" value="Submit" class="btn btn-primary" />

<div>
    <a asp-action="Index">Back to List</a>
</div>

