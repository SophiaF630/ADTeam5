@model IEnumerable<ADTeam5.Models.PurchaseOrderRecord>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1>Index</h1>*@

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <div align="center" vertical-align="middle">
                        <div style="width: 300px;padding: 20px;margin: 20px;border-style:outset; border-width:1px; ">
                            <div align="center" vertical-align="middle">
                                <h2 class="box-title">
                                    <strong><font size="5">Purchase Order Records</font></strong>
                                </h2>
                            </div>
                            <div class="box-tools">
                            </div>
                        </div>
                    </div>


                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.OrderDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ExpectedCompleteDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompleteDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StoreClerk)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SupplierCodeNavigation)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExpectedCompleteDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompleteDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StoreClerk.DepartmentCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierCodeNavigation.SupplierCode)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Poid">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Poid">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Poid">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <p align="left">
                        <a asp-action="Create"><button class="btn btn-primary" style="width:100px;height:32px;border:2px; background-color:#3c8dbc">Create New</button></a>
                    </p>
                    </div>
                </div>
            </div>
        </div>
    </section>


