@model IEnumerable<ADTeam5.ViewModels.ViewRequestDetails>

@{
    ViewData["Title"] = "Details";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script type="text/javascript"
        src="http://code.jquery.com/jquery-latest.js">
</script>

@*<h2>Details</h2>*@
<div class="box">
    <div class="box-header with-border">
        <div align="center" vertical-align="middle">
            <div style="width: 350px;padding: 20px;margin: 20px;border-style:outset; border-width:1px; ">
                <div align="center" vertical-align="middle">
                    <h3 class="box-title">
                        <strong><font size="5">Request Form Details Profile</font></strong>
                    </h3>
                </div>
                <div class="box-tools">
                </div>
            </div>
        </div>
    </div>
    <br />

    <p style="margin-left:68px">
        <a><b>Requisition Form No: @ViewData["RRID"]</b></a>
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
        <a>
            <b>
                <font color="#00B894">
                    Status: @ViewData["Status"]
                </font>
            </b>
        </a>
    </p>

    <p style="margin-left:68px"></p>
    <hr />
    @if (ViewData["CheckRecords"] != null)
    {

        <div class="box-body no-padding">
            <div class="table-responsive table-full-width">
                <table class="table no-margin table-hover table-striped table-responsive table-borderless" style="width: 100%;">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>
                                Item Name
                            </th>
                            <th>
                                Quantity
                            </th>
                            <th>

                            </th>
                            <th>

                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td></td>
                                <td class="ItemName" style="width:300px">
                                    @Html.DisplayFor(modelItem => item.itemName)
                                </td>
                                <td class="Quantity" style="width:200px">
                                    @Html.DisplayFor(modelItem => item.quantity)
                                    <meta http-equiv="refresh" content="15" />
                                </td>
                                <td style="width:100px">
                                    <button type="button" class="editItem" style="background-color:transparent; border:transparent">
                                        <i class="fa fa-edit" style="color:#66B3B3"></i>
                                    </button>
                                </td>
                                <td>
                                    <form asp-action="RequestItemDelete" asp-route-itemName="@item.itemName" asp-route-rrid="@item.rrid" method="post" data-ajax="true" data-ajax-update="#TempVoucherDetailsList" role="form" asp-controller="ViewRequest" onclick="return confirm('Are you sure you want to delete this item? Note: It will take a while to reflect the changes.');">
                                        <button style="background-color:transparent; border:transparent">
                                            <i class="fa fa-trash-alt" style="color:#dc6460"></i>

                                        </button>
                                        @*<meta http-equiv="refresh" content="10" />*@
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <br />

            </div>
        </div>

        <div>
            <button type="button" class="btn btn-primary submit createNewRequestItem" style="width:120px;height:32px;border:2px;margin-left:175px; background-color:#00B894">
                <i class='fas fa-plus-circle' style='font-size:14px'></i>&nbsp;&nbsp;Add Item
            </button>
        </div>
        <br />
        
        <hr />
        
        <div class="form-inline">
            <a asp-action="Index">
                <button type="button" class="btn btn-primary" style="width:120px;height:32px; background-color:transparent;border:1px #B3B6B7 solid;margin-left:175px; float: left">
                    <i class='fas fa-arrow-left' style='font-size:14px;border:1px;color:#B3B6B7'></i>&nbsp;&nbsp;<font style='font-size:14px;color:#B3B6B7'>Back To List</font>
                </button>
            </a>
            <form asp-action="DeleteRequest" asp-route-rrid="@ViewData["RRID"]" style="float:left" method="post" role="form" asp-controller="ViewRequest" onclick="return confirm('Are you sure you want to delete this request?');" >
                <input type="submit" value="Delete Request" class="btn btn-primary submit" style="float:left; width:110px;height:32px;border:2px; background-color:#dc6460; margin-left: 160px" />                                    
            </form>

        </div>
        <br />
        <br />
        <br />
    }
    else
    {

        <div style="width:50%; margin:auto;">
            <div style="display:inline-block; width:60%;text-align:center;">
                <h4>
                    No items in your request!
                    <br />
                    <br />
                    Please add items or delete request.
                </h4>
                <button type="button" class="btn btn-primary submit createNewRequestItem" style="float:left; width:110px;height:36px;border:2px;background-color:#00B894">Add Item</button> <form asp-action="DeleteRequest" asp-route-rrid="@ViewData["RRID"]" method="post" role="form" asp-controller="ViewRequest" onclick="return confirm('Are you sure you want to delete this request?');"><button type="submit" class="btn btn-primary submit" style="float:right; width:110px;height:36px;border:2px;background-color:darkred">Delete Request</button></form>
            </div>
        </div>
        <br />
        <br />
        <br />
    }


    <!-- Modal for create Request item-->
    <div class="modal fade in" id="CreateNewRequestItemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <br />
                @*<div class="modal-header">*@
                <div align="center" vertical-align="middle">
                    <div style="width: 400px;padding: 15px;margin: 15px;border-style:outset; border-width:1px; ">
                        <div align="center" vertical-align="middle">
                            <h5 class="modal-title" id="exampleModalLongTitle">
                                <strong><font size="5">Add To Request</font></strong>
                            </h5>
                            @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>*@
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <form method="POST" asp-action="AddItem">
                        <div class="form-group">
                            <input type="hidden" id="CreateNewRequestItemModalID" name="createNewRequestItemModalName" class="form-control" value="0" />
                        </div>
                        <div class="form-group">
                            <label for="Category">Category</label>
                            @if (ViewBag.ListofCategory != null)
                            {
                                <select for="Category" class="form-control" id="Category" asp-items="@(new SelectList(ViewBag.ListofCategory, "Category", "Category"))"></select>
                            }
                        </div>
                        <div class="form-group">
                            <label for="ItemNumber">ItemName</label>
                            <select for="ItemNumber" class="form-control" id="ItemNumber" required="required" name="itemNumber" asp-items="@(new SelectList(" "))"></select>
                        </div>
                        <div class="form-group">
                            <label for="Quantity">Quantity</label>
                            <input type="number" min="1" step="1" id="Quantity" name="quantity" required="required" class="form-control" value="" />
                        </div>
                        <div align="center">
                            <button class="btn" data-dismiss="modal" aria-hidden="true" style="width:80px;height:30px;border:2px; background-color:#EEEEEE"><font size="3" color="black">Close</font></button>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button type="submit" class="btn btn-primary" style="width:120px;height:30px;border:2px; background-color:#00B894"><font size="3" color="white">Save Changes</font></button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <!-- Modal for edit quantity-->
    <div class="modal fade" id="ItemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Update Item</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="RequestItemEdit" asp-controller="ViewRequest" method="POST">
                        <div class="form-group">
                            <label for="ItemName">Item Name</label>
                            <input type="hidden" id="ItemNameValue" name="itemName" class="form-control" value="" />
                            <input type="text" id="ItemNameDisplay" name="" class="form-control" value="" disabled />
                        </div>
                        <div class="form-group">
                            <label for="Quantity">Quantity</label>
                            <input type="number" min="1" step="1" id="Quantity" required="required" name="quantity" class="form-control" value="" />
                        </div>
                        <div class="modal-footer">
                            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(".createNewRequestItem").click(function () {
            //var $row = $(this).closest("tr");    // Find the row
            var itemNumber = ""; // Find the text
            var quantity = "";
            var createNewRequestItemModalID = 1;

            var $modal = $('#CreateNewRequestItemModal');
            $modal.find('#ItemNumber').val(itemNumber);
            $modal.find('#Quantity').val(quantity);
            $modal.find('#CreateNewRequestItemModalID').val(createNewRequestItemModalID);

            $modal.modal('show');
        });
    </script>

    <script>
        $(document).ready(function () {
            $("#Category").change(function () {
                $.get("/NewRequest/GetItemNameList", { category: $("#Category").val() }, function (data) {
                    $("#ItemNumber").empty();
                    $("#ItemNumber").append("<option value='" + "0" + "' disabled>" + "---Select item---" + "</option>");
                    $.each(data, function (index, row) {
                        $("#ItemNumber").append("<option value='" + row.itemNumber + "'>" + row.itemName + "</option>")
                    });
                });
            })
        });
    </script>

    <script>
        $(".editItem").click(function () {
            var $row = $(this).closest("tr");    // Find the row
            var itemName = $row.find("td.ItemName").text().trim(); // Find the text
            var quantity = $row.find("td.Quantity").text().trim();
            var voucherItemModalID = 1;

            var $modal = $('#ItemModal');
            $modal.find('#ItemNameValue').val(itemName);
            $modal.find('#ItemNameDisplay').val(itemName);
            $modal.find('#ItemNameDisplay').val(itemName);
            $modal.find('#Quantity').val(quantity);
            $modal.find('#VoucherItemModalID').val(voucherItemModalID);

            $modal.modal('show');
        });
    </script>
