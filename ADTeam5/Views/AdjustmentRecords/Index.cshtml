                <a asp-action="Edit" asp-route-id="@item.VoucherNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VoucherNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VoucherNo">Delete</a>
