@model IEnumerable<ADTeam5.ViewModels.AdjustmentRecordDetails>

@{
        ViewData["Title"] = "Details";
    }

<h1>Details</h1>

<div>
    <h4>AdjustmentRecord</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApproveDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApproveDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SuperviserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SuperviserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManagerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManagerId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Clerk)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clerk.DepartmentCode)
        </dd>
    </dl>

<div class="container">
    <div class="row">
        <div class="col-12">
            <table id="StationeryRetrievalList" class="table table-striped table-bordered" style="width: 100%;">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ItemNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ItemName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Remark)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
{
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Remark)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
